{
  "name": "shadcn-copy-extension",
  "private": true,
  "version": "0.0.1",
  "description": "Chrome extension that rewrites copied code from shadcn-style docs sites (e.g. ~/ â†” @/).",
  "author": "blankeos",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/blankeos/shadcn-copy-extension.git"
  },
  "bugs": {
    "url": "https://github.com/blankeos/shadcn-copy-extension/issues"
  },
  "homepage": "https://github.com/blankeos/shadcn-copy-extension#readme",
  "keywords": ["chrome-extension", "manifest-v3", "shadcn", "clipboard", "solidjs", "vite"],
  "type": "module",
  "scripts": {
    "dev": "vite --config vite.popup.config.ts",
    "build": "vite build --config vite.popup.config.ts && SCRIPT=content vite build --config vite.script.config.ts && SCRIPT=injected vite build --config vite.script.config.ts",
    "build:watch": "SCRIPT=content vite build --watch --config vite.script.config.ts",
    "preview": "vite preview",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test:e2e": "playwright test",
    "test:e2e:chrome": "playwright test --project=chrome"
  },
  "dependencies": {
    "solid-js": "^1.8.22"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "@types/chrome": "^0.0.263",
    "typescript": "^5.4.5",
    "vite": "^5.2.0",
    "vite-plugin-solid": "^2.10.2"
  }
}
